<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">

  <xacro:macro name="crank_wheel" params="
    prefix:=''
    parent:=''
    *origin">
  
    <joint name="${prefix}rotary_joint" type="revolute">
      <axis xyz="0 0 1"/>
      <!--This is continuously rotatable-->
      <limit effort="10.0" lower="0.0" upper="6.28" velocity="0.5"/>
      <parent link="${parent}"/>
      <child link="${prefix}rotary_wheel"/>
      <xacro:insert_block name="origin"/>
    </joint>

    <link name="${prefix}rotary_wheel">
      <!--TODO set proper inertia-->
      <inertial>
        <origin xyz="-0.000002016828 0.000002604043 0.0124263" rpy="0 0 0" />
        <mass value="0.4130986"/>
        <inertia ixx="0.0005752646" ixy="-0.0000006009927" ixz="0.000000006697924" iyy="0.0005474983" iyz="-0.000000007626402" izz="0.001016091"/>
      </inertial>
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://hatch_accessories/meshes/visual/crank_wheel.stl"/>
        </geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://hatch_accessories/meshes/collision/crank_wheel.stl"/>
        </geometry>
        <material name="red"/>
      </collision>
    </link>

    <joint name="${prefix}rotary_handle_joint" type="revolute">
      <axis xyz="1 0 0"/>
      <!--This is continuously rotatable-->
      <limit effort="10.0" lower="0.0" upper="1.57" velocity="0.5"/>
      <parent link="${prefix}rotary_wheel"/>
      <child link="${prefix}rotary_handle"/>
      <origin xyz="0.0 0.053975 0.0155" rpy="0 0 0"/>
    </joint>

    <link name="${prefix}rotary_handle">
      <!--TODO set proper inertia-->
      <inertial>
        <origin xyz="0.0 0.0 0.0338876" rpy="0 0 0" />
        <mass value="0.03289431"/>
        <inertia ixx="0.00001133204" ixy="-0.0000000002536241" ixz="-0.00000000002353435" iyy="0.00001133386" iyz="-0.00000000002134657" izz="0.0000009871989"/>
      </inertial>
      <visual>
        <origin xyz="0.0 0.0 0.00355" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://hatch_accessories/meshes/visual/crank_handle.stl"/>
        </geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.00355" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://hatch_accessories/meshes/collision/crank_handle.stl"/>
        </geometry>
        <material name="red"/>
      </collision>
    </link>

    <joint name="${prefix}rotary_handle_grasp_joint" type="fixed">
      <parent link="${prefix}rotary_handle"/>
      <child link="${prefix}rotary_handle_grasp"/>
      <origin xyz="0.0 0.0 0.04" rpy="0 0 0"/>
    </joint>

    <link name="${prefix}rotary_handle_grasp"/>

  </xacro:macro>
</robot>