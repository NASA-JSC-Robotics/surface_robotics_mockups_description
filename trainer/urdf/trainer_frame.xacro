<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">

  <xacro:macro name="trainer_frame" params="
    name:=''
    prefix:=''
    parent:=''
    *origin">

    <joint name="${prefix}trainer_frame_base_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="${prefix}trainer_frame"/>
      <xacro:insert_block name="origin"/>
    </joint>

    <link name="${prefix}trainer_frame">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
          <geometry>
            <mesh filename="file://$(find trainer)/meshes/visual/ivr_tasktrainer_frame.stl"/>
          </geometry>
        <material name="red">
          <color rgba="1.0 0 0 0.75"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
          <geometry>
            <mesh filename="file://$(find trainer)/meshes/collision/ivr_tasktrainer_frame.stl"/>
          </geometry>
        <material name="red">
          <color rgba="1.0 0 0 0.75"/>
        </material>
      </collision>
    </link>

  </xacro:macro>
</robot>
