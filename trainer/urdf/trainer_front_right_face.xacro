<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">

  <xacro:macro name="trainer_front_right_face" params="
    name:=''
    prefix:=''
    parent:=''
    *origin">
  
  <joint name="${prefix}trainer_front_right_face_joint" type="fixed">
    <parent link="${parent}"/>
    <child link="${prefix}front_right_face"/>
    <xacro:insert_block name="origin"/>
  </joint>

  <link name="${prefix}front_right_face">
    <!--TODO set proper inertia-->
    <inertial>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
      <mass value="0.0"/>
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
    </inertial>
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find trainer)/meshes/visual/front_right_face.stl"/>
      </geometry>
      <material name="gray">
        <color rgba="0.85 0.85 0.85 0.75"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find trainer)/meshes/collision/front_right_face.stl"/>
      </geometry>
      <material name="red">
        <color rgba="1.0 0 0 0.75"/>
      </material>
    </collision>
  </link>

  <joint name="${prefix}cabinet_1_joint" type="revolute">
    <axis xyz="0 0 1"/>
    <limit effort="10.0" lower="0.0" upper="3.14" velocity="0.5"/>
    <parent link="${prefix}front_right_face"/>
    <child link="${prefix}cabinet_1"/>
    <origin xyz="0.006 0.342 0.713" rpy="0 0 0"/>
  </joint>

  <link name="${prefix}cabinet_1">
    <!--TODO set proper inertia-->
    <inertial>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
      <mass value="0.0"/>
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
    </inertial>
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find trainer)/meshes/visual/cabinet_door_1.stl"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1.0 0.75"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find trainer)/meshes/collision/cabinet_door_1.stl"/>
      </geometry>
      <material name="red">
        <color rgba="1.0 0 0 0.75"/>
      </material>
    </collision>
  </link>

  <joint name="${prefix}cabinet_2_joint" type="revolute">
    <axis xyz="0 0 -1"/>
    <limit effort="10.0" lower="0.0" upper="3.14" velocity="0.5"/>
    <parent link="${prefix}front_right_face"/>
    <child link="${prefix}cabinet_2"/>
    <origin xyz="0.006 0.004 0.379" rpy="0 0 0"/>
  </joint>

  <link name="${prefix}cabinet_2">
    <!--TODO set proper inertia-->
    <inertial>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
      <mass value="0.0"/>
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
    </inertial>
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find trainer)/meshes/visual/cabinet_door_2.stl"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1.0 0.75"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find trainer)/meshes/collision/cabinet_door_2.stl"/>
      </geometry>
      <material name="red">
        <color rgba="1.0 0 0 0.75"/>
      </material>
    </collision>
  </link>

  <joint name="${prefix}cabinet_3_joint" type="revolute">
    <axis xyz="0 0 1"/>
    <limit effort="10.0" lower="0.0" upper="3.14" velocity="0.5"/>
    <parent link="${prefix}front_right_face"/>
    <child link="${prefix}cabinet_3"/>
    <origin xyz="0.006 0.342 0.007" rpy="0 0 0"/>
  </joint>

  <link name="${prefix}cabinet_3">
    <!--TODO set proper inertia-->
    <inertial>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
      <mass value="0.0"/>
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
    </inertial>
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find trainer)/meshes/visual/cabinet_door_3.stl"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1.0 0.75"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find trainer)/meshes/collision/cabinet_door_3.stl"/>
      </geometry>
      <material name="red">
        <color rgba="1.0 0 0 0.75"/>
      </material>
    </collision>
  </link>

  </xacro:macro>
</robot>
