<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">

  <xacro:macro name="side_face" params="
    name:=''
    prefix:=''
    parent:=''
    *origin">

    <joint name="${prefix}trainer_side_face_base_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="${prefix}side_bottom_face"/>
      <xacro:insert_block name="origin"/>
    </joint>

    <link name="${prefix}side_bottom_face">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
          <geometry>
            <mesh filename="file://$(find trainer)/meshes/visual/side_bottom_face.stl"/>
          </geometry>
        <material name="red">
          <color rgba="1.0 0 0 0.75"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
          <geometry>
            <mesh filename="file://$(find trainer)/meshes/collision/side_bottom_face.stl"/>
          </geometry>
        <material name="red">
          <color rgba="1.0 0 0 0.75"/>
        </material>
      </collision>
    </link>

    <joint name="${prefix}side_top_face_joint" type="fixed">
      <parent link="${prefix}side_bottom_face"/>
      <child link="${prefix}side_top_face"/>
      <origin xyz="0.0 0.0 0.5084191" rpy="0 0 0"/>
    </joint>

    <link name="${prefix}side_top_face">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
          <geometry>
            <mesh filename="file://$(find trainer)/meshes/visual/side_top_face.stl"/>
          </geometry>
        <material name="red">
          <color rgba="1.0 0 0 0.75"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
          <geometry>
            <mesh filename="file://$(find trainer)/meshes/collision/side_top_face.stl"/>
          </geometry>
        <material name="red">
          <color rgba="1.0 0 0 0.75"/>
        </material>
      </collision>
    </link>

  <joint name="${prefix}cabinet_4_joint" type="revolute">
    <axis xyz="0 0 1"/>
    <limit effort="10.0" lower="0.0" upper="3.14" velocity="0.5"/>
    <parent link="${prefix}side_top_face"/>
    <child link="${prefix}cabinet_4"/>
    <origin xyz="0.004 0.006 0.484" rpy="0 0 0"/>
  </joint>

  <link name="${prefix}cabinet_4">
    <!--TODO set proper inertia-->
    <inertial>
      <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
      <mass value="0.0"/>
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
    </inertial>
    <visual>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find trainer)/meshes/visual/cabinet_door_4.stl"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1.0 0.75"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find trainer)/meshes/collision/cabinet_door_4.stl"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1.0 0.75"/>
      </material>
    </collision>
  </link>

  </xacro:macro>
</robot>
