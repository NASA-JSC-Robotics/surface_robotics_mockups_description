<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">

  <xacro:macro name="hatch_face" params="
    name:=''
    prefix:=''
    parent:=''
    *origin">

    <joint name="${prefix}4040_hatch_base_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="${prefix}4040_hatch"/>
      <xacro:insert_block name="origin"/>
    </joint>

    <link name="${prefix}4040_hatch">
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
          <geometry>
            <mesh filename="file://$(find 4040_hatch)/meshes/visual/4040_hatch_face.stl"/>
          </geometry>
        <material name="red">
          <color rgba="1.0 0 0 0.75"/>
        </material>
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
          <geometry>
            <mesh filename="file://$(find 4040_hatch)/meshes/collision/4040_hatch_face.stl"/>
          </geometry>
        <material name="red">
          <color rgba="1.0 0 0 0.75"/>
        </material>
      </collision>
    </link>

  </xacro:macro>
</robot>
