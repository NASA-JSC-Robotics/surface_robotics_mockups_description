<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">

  <xacro:macro name="hatch_4060" params="
    prefix:=''
    parent:=''
    *origin
    external_handle_1:='false'
    external_handle_2:='false'
    external_handle_3:='false'
    internal_handle_1:='false'
    internal_handle_2:='false'">


    <joint name="${prefix}hatch_inner_frame_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="${prefix}hatch_inner_frame"/>
      <origin xyz="0.584329 1.245 0.7113" rpy="0 0 ${pi}"/>
    </joint>

    <link name="${prefix}hatch_inner_frame">
      <!--TODO set proper inertia-->
      <inertial>
        <origin xyz="0.01151002 0.5753364 0.5459604" rpy="0 0 0"/>
        <mass value="7.381808"/>
        <inertia ixx="4.347317" ixy="-0.001737663" ixz="0.00003731045" iyy="2.49037" iyz="0.02113006" izz="1.858204"/>
      </inertial>
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://hatch_4060/meshes/visual/hatch_4060_frame.stl"/>
        </geometry>
        <material name="gray"/>
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://hatch_4060/meshes/collision/hatch_4060_frame.stl"/>
        </geometry>
        <material name="red"/>
      </collision>
    </link>

    <joint name="${prefix}hatch_outer_frame_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="${prefix}hatch_outer_frame"/>
      <xacro:insert_block name="origin"/>
    </joint>

    <link name="${prefix}hatch_outer_frame">
      <!--TODO set proper inertia-->
      <inertial>
        <origin xyz="0.01151002 0.5753364 0.5459604" rpy="0 0 0"/>
        <mass value="7.381808"/>
        <inertia ixx="4.347317" ixy="-0.001737663" ixz="0.00003731045" iyy="2.49037" iyz="0.02113006" izz="1.858204"/>
      </inertial>
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://hatch_4060/meshes/visual/hatch_4060_frame.stl"/>
        </geometry>
        <material name="gray"/>
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://hatch_4060/meshes/collision/hatch_4060_frame.stl"/>
        </geometry>
        <material name="red"/>
      </collision>
    </link>
 
    <joint name="${prefix}hatch_outer_frame_face_joint" type="revolute">
      <axis xyz="0 0 1"/>
      <limit effort="10.0" lower="0.0" upper="1.65806" velocity="0.5"/> <!-- 95 degrees -->
      <parent link="${prefix}hatch_outer_frame"/>
      <child link="${prefix}hatch_face"/>
      <origin xyz="0.0827 1.21379 0.0457" rpy="0 0 0"/>
      <dynamics friction="3.0" damping="3.0"/>
    </joint>
 
    <link name="${prefix}hatch_face">
      <!--TODO set proper inertia-->
      <inertial>
        <origin xyz="-0.05635759 -0.6185068 0.5223265" rpy="0 0 0"/>
        <mass value="18.65315"/>
        <inertia ixx="5.956354" ixy="-0.02180356" ixz="0.001603986" iyy="3.823124" iyz="-0.06191432" izz="2.152308"/>
      </inertial>
      <!--TODO check the orientation of the hinges, up or down-->
      <visual>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://hatch_4060/meshes/visual/hatch_4060_face.stl"/>
        </geometry>
        <material name="gray"/>
      </visual>
      <collision>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://hatch_4060/meshes/collision/hatch_4060_collision.stl"/>
        </geometry>
        <material name="red"/>
      </collision>
    </link>
 
    <joint name="${prefix}right_cal_1_joint" type="fixed">
      <parent link="${prefix}hatch_face"/>
      <child link="${prefix}right_cal_1_frame"/>
      <origin xyz="0.0167 0.0 0.0" rpy="0 0 0"/>
    </joint>
 
    <link name="${prefix}right_cal_1_frame"/>
 
    <joint name="${prefix}right_cal_2_joint" type="fixed">
      <parent link="${prefix}hatch_face"/>
      <child link="${prefix}right_cal_2_frame"/>
      <origin xyz="0.0 0.0167 0.0" rpy="0 0 0"/>
    </joint>
 
    <link name="${prefix}right_cal_2_frame"/>
 
    <xacro:include filename="$(find hatch_accessories)/urdf/crank_wheel.xacro"/>
    <!--TODO are the centers located properly?-->
    <xacro:crank_wheel prefix="${prefix}external_" parent="${prefix}hatch_face">
      <origin xyz="-0.17161 -0.9474 0.4325" rpy="0 -${pi/2} 0"/>
    </xacro:crank_wheel>
    <xacro:crank_wheel prefix="${prefix}internal_" parent="${prefix}hatch_face">
      <origin xyz="0.04431 -0.9474 0.4265" rpy="0 ${pi/2} 0"/>
    </xacro:crank_wheel>
 
    <xacro:include filename="$(find hatch_accessories)/urdf/grab_handle.xacro"/>
    <!--TODO which handles are mounted?-->
    <xacro:if value="${external_handle_1}">
      <xacro:grab_handle prefix="${prefix}external_1_" parent="${prefix}hatch_face">
        <origin xyz="-0.07 -0.9016 ${0.7971+0.005}" rpy="0 ${pi} 0"/>
      </xacro:grab_handle>
    </xacro:if>
 
    <xacro:if value="${external_handle_2}">
      <xacro:grab_handle prefix="${prefix}external_2_" parent="${prefix}hatch_face">
        <origin xyz="-0.07 ${-1.0223-0.005} ${0.6957 - 0.007}" rpy="${-pi/2} ${pi} 0"/>
      </xacro:grab_handle>
    </xacro:if>

    <xacro:if value="${external_handle_3}">
      <xacro:grab_handle prefix="${prefix}external_3_" parent="${prefix}hatch_face">
        <origin xyz="${-0.07} ${-0.145+0.0195 - 0.004} 0.6957" rpy="${-pi/2} ${pi} 0"/>
      </xacro:grab_handle>
    </xacro:if>

    <xacro:if value="${internal_handle_1}">
      <xacro:grab_handle prefix="${prefix}internal_1_" parent="${prefix}hatch_face">
        <origin xyz="-0.058 -0.9016 0.7971" rpy="0 0 0"/>
      </xacro:grab_handle>
    </xacro:if>

    <xacro:if value="${internal_handle_2}">
      <xacro:grab_handle prefix="${prefix}internal_2_" parent="${prefix}hatch_face">
        <origin xyz="-0.058 -1.078 0.6957" rpy="${pi/2} 0 0"/>
      </xacro:grab_handle>
    </xacro:if>

  </xacro:macro>
</robot>